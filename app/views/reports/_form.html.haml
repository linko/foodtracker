.col-md-5
  = simple_form_for @report, html: { class: 'form-horizontal' } do |f|
    = f.input :period_start, as: :hidden
    = f.input :period_end, as: :hidden
    = f.input :email, input_html: { class: 'form-control' }
    = f.input :subject, input_html: { class: 'form-control' }
    = f.input :comments, input_html: { class: 'form-control', rows: 5 }
    %br
    = f.submit 'Send Report', :class => 'btn btn-success'
