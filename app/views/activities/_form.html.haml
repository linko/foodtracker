= simple_form_for @activity, :html => { :class => 'form-horizontal' } do |f|
  = f.input :user_id
  = f.input :category_id
  = f.input :description
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), activities_path, :class => 'btn'
